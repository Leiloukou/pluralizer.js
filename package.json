{
    "name": "pluralizer.js",
    "version": "3.2.2",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": ".dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/leiloukou/pluralizer.js.git"
    },
    "directories": {
        "lib": "dist"
    },
    "scripts": {
        "dev": "tsc --watch",
        "build": "tsup src/index.ts --format cjs,esm --dts",
        "test": "vitest --coverage",
        "lint-check": "tsc",
        "format-check": "npx prettier . --check",
        "format-fix": "npx prettier . --write",
        "release": "npm run build && npm publish"
    },
    "keywords": [
        "plural",
        "pluralize",
        "swap",
        "international",
        "internationalization",
        "i11n",
        "format",
        "numbers",
        "strings",
        "typescript"
    ],
    "author": "Jacob Leger",
    "license": "./LICENSE",
    "description": "Pluralize anything with this library",
    "devDependencies": {
        "@changesets/cli": "^2.27.1",
        "@vitest/coverage-v8": "^0.34.3",
        "prettier": "^3.1.1",
        "tsup": "^8.0.1",
        "typescript": "^5.2.2",
        "vitest": "^0.34.3"
    }
}
